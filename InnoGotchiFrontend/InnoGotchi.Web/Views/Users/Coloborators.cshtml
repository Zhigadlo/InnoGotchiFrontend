@using InnoGotchi.BLL.DTO;
@model IEnumerable<UserDTO>
@if(Model.Count() == 0)
{
    <div class="text-center h1">You have no coloborators yet</div>
}
else
{
    <div class="text-center">
    <h1 class="display-4">Your coloborators</h1>
    <table class="table">
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td align="left">
                    <img class="img-thumbnail" src="data:image/png;base64,@(Convert.ToBase64String(item.Avatar))" width="80" height="80" />
                </td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                @if(item.Farm == null)
                {
                    <td>
                        This user hasn't farm yet
                    </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-outline-dark" asp-controller="Farms" asp-action="UserFarm" asp-route-id="@item.Farm.Id">go to farm</a>
                    </td>
                }
            </tr>
        }
    </table>
</div>
}
