@using InnoGotchi.Web.BLL.DTO;
@{
    ViewData["Title"] = "All users";
}
@model IEnumerable<UserDTO>;
<div class="text-center">
    <h1 class="display-4">Users</h1>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Password</th>
            <th>AvatarURL</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.PasswordHash</td>
                <td>@item.AvatarURL</td>
            </tr>
        }
    </table>
</div>
