@using InnoGotchi.BLL.DTO;
@model FarmDTO

@if (Model.Id == -1)
{
    <h1>You have no farm yet</h1>
    <form method="post" asp-controller="Farms" asp-action="CreateFarm">
        <div class="form-floating mb-3">
            <input id="name_input" name="name" type="text" class="form-control" placeholder="farm_name" required />
            <label for="name_input">Enter farm name</label>
        </div>
        
        <input class="btn btn-outline-dark" type="submit" value="Create farm"/>
    </form>
}
else
{
    if (Model.Pets == null || Model.Pets.Count() == 0)
    {
        <h1>You have no pets yet</h1>
        <a class="btn btn-outline-dark" asp-action="PetConstructor" asp-controller="Pictures">Create new pet</a>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">Your pets</h1>
            <div>
                <a class="btn btn-outline-dark" asp-action="PetConstructor" asp-controller="Pictures">Create new pet</a>
            </div>
            <table class="table">
                <tr>
                    <th>Appearance</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Pet state</th>
                    <th>Hungry state</th>
                    <th>Thirsty state</th>
                </tr>
                @foreach (var item in Model.Pets)
                {
                    <tr>
                        <td>
                            <img src="data:image/svg+xml;base64,@(item.Appearance)" width="100" height="100" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.State</td>
                        @if(item.State == PetState.Dead)
                        {
                            <td>None</td>
                            <td>None</td>
                        }
                        else
                        {
                            <td>@item.HungerLavel</td>
                            <td>@item.ThirstyLavel</td>
                        }
                    </tr>
                }
            </table>
        </div>
        
    }

}
