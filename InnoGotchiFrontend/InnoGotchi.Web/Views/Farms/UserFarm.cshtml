@using InnoGotchi.Web.BLL.DTO;
@model FarmDTO

@if (Model.CreateTime == DateTime.MinValue)
{
    <h1>You have no farm yet</h1>
    <form method="post" asp-controller="Farms" asp-action="CreateFarm">
        <label>Enter farm name</label>
        <input name="name" type="text"/>
        <input type="submit" value="Create farm"/>
    </form>
}
else
{
    if (Model.Pets == null || Model.Pets.Count() == 0)
    {
        <h1>You have no pets yet</h1>
        <a class="btn btn-info" asp-action="PetConstructor" asp-controller="Pets">Create new pet</a>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">Your pets</h1>
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Nose</th>
                    <th>Mouth</th>
                    <th>Eyes</th>
                    <th>Body</th>
                </tr>
                @foreach (var item in Model.Pets)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Appearance.NoseURL</td>
                        <td>@item.Appearance.MouthURL</td>
                        <td>@item.Appearance.EyesURL</td>
                        <td>@item.Appearance.BodyURL</td>
                    </tr>
                }
            </table>
        </div>
        <div>
            <a class="btn btn-info" asp-action="PetConstructor" asp-controller="Pets">Create new pet</a>
        </div>
    }

}
